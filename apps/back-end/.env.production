NODE_ENV=production
PORT=3001
BACKEND_PORT=3001
API_VERSION=v1
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d
FRONTEND_URL=https://your-production-domain.com
BACKEND_URL=https://api.your-production-domain.com
CORS_ORIGIN=https://your-production-domain.com,https://admin.your-production-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MONITORING_ENABLED=true

# JWT Secrets - CHANGE THESE IN PRODUCTION
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string-in-production
JWT_REFRESH_EXPIRE=30d

FCM_SERVER_KEY=your-production-fcm-server-key

GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=your-production-app-password
EMAIL_FROM=noreply@foresite.com

SESSION_SECRET=change-this-to-a-secure-session-secret-in-production

# Monitoring
SENTRY_DSN=your-production-sentry-dsn
MONITORING_ENABLED=true

# üçÉ MongoDB Atlas Connection - Use production database
MONGO_URI=mongodb+srv://username:password@your-production-cluster.mongodb.net/foresite-production?retryWrites=true&w=majority

# üî• Firebase Configuration - Use production credentials
FIREBASE_PROJECT_ID=your-production-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-production-firebase-client-email
FIREBASE_PRIVATE_KEY="your-production-firebase-private-key"

# ‚òÅÔ∏è Cloudinary Configuration - Use production credentials
CLOUDINARY_CLOUD_NAME=your-production-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-production-cloudinary-api-key
CLOUDINARY_API_SECRET=your-production-cloudinary-api-secret
